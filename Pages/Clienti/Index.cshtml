@page
@model Pricope_Delia_project.Pages.Clienti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clientii Flantastic</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

@* Formular de cautare cu reset*@ 
<form asp-page="./Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control"
               placeholder="Caută după nume sau email..."
               value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Caută
        </button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Telefon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
