<table class="table">

    <thead>
        <tr>
            <th>
                # Comandă
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].DataComanda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Cantitate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Produs)
            </th>
            <th>Pret Unitar</th>
            <th>Total de Plata</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comanda) {
        <tr><td class="fw-bold">
    #@item.ID
</td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DataComanda)
            </td>
                <td>
                    @{
                        string badgeClass = Model.Comanda[0].Status switch
                        {
                            "In Asteptare" => "bg-secondary",
                            "In Preparare" => "bg-warning text-dark",
                            "Finalizata" => "bg-info text-white",
                            "Livrata" => "bg-success",
                            "Anulata" => "bg-danger",
                            _ => "bg-light text-dark"
                        };
                    }
                    <span class="badge @badgeClass">@item.Status</span>
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantitate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produs.Denumire)
            </td>
                <td>@item.Produs.Pret lei</td>

                <td class="fw-bold text-success">
                    @((item.Cantitate * item.Produs.Pret).ToString("0.00")) lei
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
    <form asp-page="./Index" method="get" class="mb-4 p-3 bg-light border rounded">
        <div class="row">
            <div class="col-md-6">
                <label class="form-label fw-bold">Caută Comandă</label>
                <div class="input-group mb-3">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="ID sau Nume Client..." value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-primary">Filtrează</button>
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Filtrează după Status</label>
                <div class="d-flex flex-wrap gap-3">
                    @{
                        var statuses = new[] { "In Asteptare", "In Preparare", "Finalizata", "Livrata", "Anulata" };
                        var selected = (List<string>)ViewData["SelectedStatuses"];
                    }
                    @foreach (var status in statuses)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="selectedStatuses"
                                   value="@status" id="check-@status"
                                   @(selected.Contains(status) ? "checked" : "")>
                            <label class="form-check-label" for="check-@status">
                                @status
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="mt-2">
            <a asp-page="./Index" class="btn btn-sm btn-outline-secondary">Resetează toate filtrele</a>
        </div>
    </form>
</table>
