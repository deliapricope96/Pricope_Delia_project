@page
@model Pricope_Delia_project.Pages.Comenzi.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].DataComanda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Cantitate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comanda[0].Produs)
            </th>
            <th>Pret Unitar</th>
            <th>Total de Plata</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comanda) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataComanda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantitate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produs.Denumire)
            </td>
                <td>@item.Produs.Pret lei</td>

                <td class="fw-bold text-success">
                    @((item.Cantitate * item.Produs.Pret).ToString("0.00")) lei
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
